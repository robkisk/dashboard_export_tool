# Databricks Configuration
# Required: Your SQL Warehouse ID (find in SQL Warehouses UI or use SDK to list)
DATABRICKS_WAREHOUSE_ID=your_warehouse_id_here

# Optional: Databricks Authentication
# If not set, will use ~/.databrickscfg or environment defaults
# DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
# DATABRICKS_TOKEN=dapi1234567890abcdef

# SMTP Email Configuration
# Required: SMTP server settings for sending emails

# For Gmail (recommended: use App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=your-email@gmail.com

# For Outlook/Hotmail
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=your-email@outlook.com
# SMTP_PASSWORD=your-password
# FROM_EMAIL=your-email@outlook.com

# For Office 365
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=your-email@company.com
# SMTP_PASSWORD=your-password
# FROM_EMAIL=your-email@company.com

# SMTP Options
SMTP_USE_TLS=true

# Export Configuration
# Directory where PDF files will be saved
EXPORT_OUTPUT_DIR=./exports

# Page size: LETTER or A4
EXPORT_PAGE_SIZE=LETTER

# Orientation: landscape or portrait
EXPORT_ORIENTATION=landscape

# Maximum rows to export (safety limit)
EXPORT_MAX_ROWS=10000
